        "/api/aid": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Store user aid selection from form after register",
                "operationId": "1f068925ac5a8b0cb3f1f4cb6ab558de",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "aid_type_id": {
                                        "description": "ID of the aid type (required)",
                                        "type": "integer"
                                    },
                                    "aid_category_id": {
                                        "description": "ID of the aid category (required)",
                                        "type": "integer"
                                    },
                                    "product_category_id": {
                                        "description": "ID of the product category (optional)",
                                        "type": "integer",
                                        "nullable": true
                                    },
                                    "products": {
                                        "type": "array",
                                        "items": {
                                            "description": "IDs of selected products (optional)",
                                            "type": "integer"
                                        },
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Data successfully saved.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Data successfully saved."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/matching-users": {
