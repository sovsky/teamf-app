{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentation about projekt SasiadWPotrzebie",
        "description": "sasiadwpotrzebie api",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:9000",
            "description": "local server"
        },
        {
            "url": "http://localhost:9000",
            "description": "staging server"
        },
        {
            "url": "http://localhost:9000",
            "description": "production server"
        }
    ],
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Registration of platform users",
                "operationId": "17d569550a6f526e6d36d1af313a1f61",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirm",
                                    "age",
                                    "phone_number",
                                    "city"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "User name must be max 255 characters",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "User email must be unique",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User password, at least 8 characters with mixed cases, numbers, and symbols",
                                        "type": "string"
                                    },
                                    "password_confirm": {
                                        "description": "User password confirmation",
                                        "type": "string"
                                    },
                                    "age": {
                                        "description": "User age mus be a date type, in example: 1990-01-01",
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "phone_number": {
                                        "description": "User phone number in the format +1234567890",
                                        "type": "string",
                                        "pattern": "^[0-9\\s\\-\\+\\(\\)]*$"
                                    },
                                    "city": {
                                        "description": "User city must be max 100 characters",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User register successfully."
                    },
                    "422": {
                        "description": "Unprocessable entity"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Login of platform users",
                "operationId": "13789c6e8de56f03890c8e718282efb5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User email",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User password",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User login successfully."
                    },
                    "422": {
                        "description": "Unprocessable entity"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Logout of platform users",
                "operationId": "53716fb5f115f1964700cf37eb93c2c0",
                "responses": {
                    "201": {
                        "description": "User logout successfully."
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}