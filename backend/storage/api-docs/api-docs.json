        "/api/users/{id}": {
            "delete": {
                "tags": [
                    "Admin"
                ],
                "summary": "Delete a user",
                "description": "Removes the user based on their ID.",
                "operationId": "0c52a34ecb2ce50375bf8c7ca09c69df",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
