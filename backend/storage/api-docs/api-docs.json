                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "city": {
                                                        "type": "string"
                                                    },
                                                    "latest_selection": {
                                                        "properties": {
                                                            "aid_type": {
                                                                "type": "string"
                                                            },
                                                            "aid_category": {
                                                                "type": "string"
                                                            },
                                                            "product_category": {
                                                                "type": "string"
                                                            },
                                                            "products": {
                                                                "type": "array",
                                                                "items": {
                                                                    "properties": {
                                                                        "id": {
                                                                            "type": "integer"
                                                                        },
                                                                        "name": {
                                                                            "type": "string"
                                                                        }
                                                                    },
                                                                    "type": "object"
                                                                }
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Registration of platform users",
                "description": "Register api",
                "operationId": "584a102470c054e585330c05f7da4bfc",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "age",
                                    "phone_number",
                                    "city_id",
                                    "role"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "User name, max 255 characters",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "User email, must be unique",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User password, at least 8 characters with mixed cases, numbers, and symbols",
                                        "type": "string"
                                    },
                                    "password_confirmation": {
                                        "description": "Password confirmation",
                                        "type": "string"
                                    },
                                    "age": {
                                        "description": "User's date of birth in format YYYY-MM-DD",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "phone_number": {
                                        "description": "Phone number in format +1234567890",
                                        "type": "string",
                                        "pattern": "^[0-9\\s\\-\\+\\(\\)]*$"
                                    },
                                    "city_id": {
                                        "description": "ID of the user's city",
                                        "type": "integer"
                                    },
                                    "role": {
                                        "description": "Role of the user",
                                        "type": "string",
                                        "enum": [
                                            "volunteer",
                                            "deprived person"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully."
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "your-token-here"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation errors"
                    },
                    "400": {
                        "description": "Invalid role specified"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Login of platform users",
                "description": "Login api",
                "operationId": "2526fe2d44c926504aa3663c8f10a15c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User email",
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "description": "User password, minimum 8 characters",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User logged in successfully",
                        "headers": {
                            "Set-Cookie": {
                                "description": "HTTP-only cookie containing the authentication token",
                                "schema": {
                                    "type": "string",
                                    "example": "token=your-token; HttpOnly; Max-Age=1440; Path=/; SameSite=Lax"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged in successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid credentials"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The email field is required."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
