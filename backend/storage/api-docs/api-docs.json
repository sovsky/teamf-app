    "paths": {
        "/api/admin/create": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Create admin account",
                "description": "Create Admin account api",
                "operationId": "da554fa7d664b5e334156aa858466413",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirm",
                                    "age",
                                    "phone_number",
                                    "city"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "User name must be max 255 characters",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "User email must be unique",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User password, at least 8 characters with mixed cases, numbers, and symbols",
                                        "type": "string"
                                    },
                                    "password_confirm": {
                                        "description": "User password confirmation",
                                        "type": "string"
                                    },
                                    "age": {
                                        "description": "User age mus be a date type, in example: 1990-01-01",
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "phone_number": {
                                        "description": "User phone number in the format +1234567890",
                                        "type": "string",
                                        "pattern": "^[0-9\\s\\-\\+\\(\\)]*$"
                                    },
                                    "city": {
                                        "description": "User city must be max 100 characters",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Admin account registered successfully."
                    },
                    "400": {
                        "description": "Role 'admin' does not exist."
                    }
                }
            }
        },
